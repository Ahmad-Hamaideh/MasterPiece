@model test.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Sign in & Sign up Form</title>
<link href="~/assets/css/login1.css" rel="stylesheet" />

<main class="sign-up-mode">
    <div class="box">
        <div class="inner-box">
            <div class="forms-wrap">



                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "sign-up-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="logo">
                        <h4>Silvana</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                    </div>
                    <div class="heading">
                        <h2>Get Started</h2>
                        <h6>Already have an account?</h6>
                        <a href="~/account/login" class="toggle">Sign in</a>
                    </div>

                    <div class="actual-form">
                        <div class="input-wrap">


                            @Html.TextBoxFor(m => m.Email, new { @class = "input-field" })

                            <label>Email</label>
                        </div>

                        <div class="input-wrap">

                            @Html.PasswordFor(m => m.Password, new { @class = "input-field" })
                            <label>Password</label>
                        </div>

                        <div class="input-wrap">

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-field" })

                            <label>
                                Confirm the password
                            </label>
                        </div>

                        <input type="submit" value="Sign Up" class="sign-btn" />
                        <div class="heading">
                            <h6>Create a seller account?</h6>
                            <a href="./Registration.html" class="toggle">Sign in</a>
                        </div>

                        <p class="text">
                            By signing up, I agree to the
                            <a href="#">Terms of Services</a> and
                            <a href="#">Privacy Policy</a>
                        </p>

                    </div>
                }

            </div>


            <div class="carousel">
                <div class="images-wrapper">
                    <img style="width: 510px; height: 385px " src="~/assets/images/products/login.png" class="image img-1 show" alt="" />
                    <img style="width: 510px; height: 385px " src="~/assets/images/products/login2.png" class="image img-2  " alt="" />
                    <img style="width: 510px; height: 385px " src="~/assets/images/products/login3.png" class="image img-3" alt="" />
                </div>

                <div class="text-slider">
                    <div class="text-wrap">
                        <div class="text-group">
                            <h2>Welcome to the family Silvana </h2>
                            <h2>Customize as you like</h2>
                            <h2>Great discounts</h2>
                        </div>
                    </div>

                    <div class="bullets">
                        <span class="active" data-value="1"></span>
                        <span data-value="2"></span>
                        <span data-value="3"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>


</main>




<script src="~/assets/js/app.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/assets/js/app.js"></script>